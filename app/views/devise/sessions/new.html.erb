<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-signin' }) do |f| %>
      <h2 class="form-signin-heading">Sign in</h2>

      <%= f.email_field :email, class: 'form-control', autofocus: true, placeholder: 'Email address', required: true %>
      <%= f.password_field :password, class: 'form-control', placeholder: 'Password', required: true %>

      <label class="checkbox">
        <%= f.check_box :remember_me %>
        Remember me
      </label>

      <%= f.button :submit, 'Sign in', class: 'btn btn-lg btn-primary btn-block' %>
    <% end %>
  </div>
</div>
